{
    "Version": "2008-10-17",
    "Id": "__default_policy_ID",
    "Statement": [
      {
        "Sid": "__default_statement_ID",
        "Effect": "Allow",
        "Principal": {
          "AWS": "*"
        },
        "Action": [
          "SNS:GetTopicAttributes",
          "SNS:SetTopicAttributes",
          "SNS:AddPermission",
          "SNS:RemovePermission",
          "SNS:DeleteTopic",
          "SNS:Subscribe",
          "SNS:ListSubscriptionsByTopic",
          "SNS:Publish"
        ],
        "Resource": "arn:aws:sns:us-east-1:801355498549:s3_event_notification",
        "Condition": {
          "StringEquals": {
            "AWS:SourceOwner": "801355498549"
          }
        }
      },
      {
      "Sid": "__get_s3_event_through_sns",
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": [
        "SNS:Publish"
      ],
      "Resource": "arn:aws:sns:us-east-1:801355498549:s3_event_notification",
      "Condition": {
        "StringEquals": {
          "aws:SourceArn": "arn:aws:s3:::lambda-processing-sai"
        }
      }
    }
    ]
  }